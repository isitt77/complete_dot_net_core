@model int

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-info text-center">Payment Successful!</h1>
        Order Number : @Model <br /><br />
        <img src="~/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center">
        <br />
        Your payment has been applied successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details"
           asp-route-orderId="@Model" class="btn btn-primary">
            Back to Order Details
        </a>
    </div>
</div>