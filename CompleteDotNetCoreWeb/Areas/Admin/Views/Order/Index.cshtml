@{
    var status = Context.Request.Query["status"];
    string inProcess = "text-light";
    string pending = "text-light";
    string completed = "text-light";
    string approved = "text-light";
    string all = "text-light";

    switch (status)
    {
        case "inProcess":
            inProcess = "text-white";
            break;
        case "pending":
            pending = "text-white";
            break;
        case "completed":
            completed = "text-white";
            break;
        case "approved":
            approved = "text-white";
            break;
        default:
            all = "text-white";
            break;
    }
}

<div class="p-3">
    <div class="d-flex justify-content-between pt-4">
        <div class="p-2">
            <h2 class="text-info">Order List</h2>
        </div>
        <div class="p-2">
            <ul class="nav nav-pills">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"
                       role="button" aria-haspopup="true" aria-expanded="false">Filter Order Status</a>
                    <div class="dropdown-menu" style="">
                        <a class="dropdown-item @inProcess" style="text-decoration:none;"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="inProcess">
                            In Process
                        </a>
                        <a class="dropdown-item @pending" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="pending">
                            Payment Pending
                        </a>
                        <a class="dropdown-item @completed" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="completed">
                            Completed
                        </a>
                        <a class="dropdown-item @approved" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="approved">
                            Approved
                        </a>
                        <a class="dropdown-item @all" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="all">
                            All
                        </a>
                    </div>
                </li>
