
<div class="p-3">
    <div class="d-flex justify-content-between pt-4">
        <div class="p-2">
            <h2 class="text-info">Order List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item">
                    <a style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="inProcess">
                        In Process
                    </a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Order"
                       asp-action="Index" asp-route-status="pending">
                        Payment Pending
                    </a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Order"
                       asp-action="Index" asp-route-status="completed">
                        Completed
                    </a>
                </li>
                <li class="list-group-item">
                    <a style="text-decoration:none" asp-controller="Order"
                       asp-action="Index" asp-route-status="all">
                        All
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <br />
    <table id="dataTable" class="table table-bordered table-striped" width="100%">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Order Status</th>
                <th>Order Total</th>
                <th width="24%"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/order.js"></script>

}