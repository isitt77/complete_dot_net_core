                    <li class="nav-item @completed">
                        <a class="nav-link @completed" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="completed">
                            Completed
                        </a>
                    </li>
                    <li class="nav-item @approved">
                        <a class="nav-link @approved" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="approved">
                            Approved
                        </a>
                    </li>
                    <li class="nav-item @all">
                        <a class="nav-link @all" style="text-decoration:none"
                           asp-controller="Order" asp-action="Index"
                           asp-route-status="all">
                            All
                        </a>
                    </li>*@
            </ul>
        </div>
    </div>
    <br />
    <table id="dataTable" class="table table-bordered table-striped" width="100%">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Name</th>
                <th>Phone Number</th>
