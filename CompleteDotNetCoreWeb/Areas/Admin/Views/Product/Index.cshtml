@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-info" asp-controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br />
    <div class="overflow-auto">
        <table id="dataTable" class="table table-bordered table-hover" width="100%">
            <thead>
                <tr class="table-primary">
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Cover Type</th>
                    <th width="24%"></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{

    <script src="~/js/product.js"></script>

}