@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-info" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-hover" width="100%">
        <thead>
            <tr class="table-primary">
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th width="24%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td class="d-flex justify-content-center">
                        <a class="btn btn-warning mx-2"
                           asp-controller="Category" asp-action="Edit"
                           asp-route-id="@obj.Id">
                            <i class="bi bi-pencil"></i> <span class="d-none
                                d-xl-inline">&nbsp; Edit</span>
                        </a>
                        <a class="btn btn-danger mx-2"
                           asp-controller="Category"
                           asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash"></i> <span class="d-none
                                d-xl-inline">&nbsp; Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>