@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card mt-5">
        <div class="card-header row">
            <div class="col-12 col-md-6">
                <h1 class="text-50">@Model.Product.Title</h1>
                <p>by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end">
                <h4 class="d-md-inline-block">
                    <span class="badge badge-pill text-dark bg-light">@Model.Product.CoverType.Name</span>
                </h4>
                <h4 class="d-md-inline-block">
                    <span class="badge badge-pill text-dark bg-light">@Model.Product.Category.Name</span>
                </h4>
            </div>
        </div>
        <div class="card-body row container bg-light">
            <div class="container rounded">
                <div class="row">
                    <div class="col">
                        <div class="row pl-2">
                            <h5 class="text-dark">ISBN : @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-dark pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row my-3">
                            <span class="text-dark h5">@Html.Raw(Model.Product.Description)</span>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 text-dark"><h4>Count</h4></div>
                            <div class="col-8">
                                <input asp-for="Count" class="form-control" placeholder="0" />
                                <span asp-validation-for="Count"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4 col-md-3 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.IamgeUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-12 col-md-3 m-2">
                    <button type="submit" value="Add to Cart" class="btn btn-success form-control">Add to Cart</button>
                </div>
                <div class="col-12 col-md-3 m-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary form-control ">Back to Home Page</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        // Runs client side validation so server isn't accessed.
        <partial name="_ValidationScriptsPartial" />
    }
}