@model ShoppingCart

    <form method="post">
        <div class="card mt-5">
            <div class="card-header bg-dark row">
                <div class="col-12 col-md-6">
                    <h1 class="text-50">Title</h1>
                    <p>by Author</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">CoverType</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">Category</span>
                </div>
            </div>
            <div class="card-body row container bg-light">
                <div class="container rounded">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-dark">ISBN : ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-dark pb-2">List Price: <strike>$$$</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>1-50</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>51-100</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>$$</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>$$</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>$$</div>
                                </div>
                            </div>
                            <div class="row">
                                <p class="text-dark">Description</p>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 text-dark"><h4>Count</h4></div>
                                <div class="col-8">
                                    <input class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-dark">
                <div class="row">
                    <div class="col-12 col-md-3">
                        <button type="submit" value="Add to Cart" class="btn btn-success form-control">Add to Cart</button>
                    </div>
                    <div class="col-12 col-md-3">
                        <a class="btn btn-secondary form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>